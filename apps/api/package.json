{
  "name": "@hsw/api",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev --persist-to=.wrangler/state",
    "build": "wrangler deploy --dry-run",
    "test": "vitest run",
    "test:watch": "vitest",
    "seed:local": "wrangler d1 execute hsw --local --file ./seed-local.sql",
    "seed:remote": "echo \"WARNING: This will modify production data. Type 'yes' to continue:\" && read -r confirm && [ \"$confirm\" = \"yes\" ] && wrangler d1 execute hsw --remote --file ./seed-remote.sql || echo \"Cancelled.\""
  },
  "dependencies": {
    "@hsw/db": "workspace:*",
    "@hsw/shared": "workspace:*",
    "drizzle-orm": "^0.33.0",
    "hono": "^4.5.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250100.0",
    "vitest": "^1.0.0",
    "wrangler": "^4.34.0"
  }
}
